{
  "name": "marimo-container",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "ship": "wrangler deploy",
    "test": "tsc && prettier --check .",
    "format": "prettier --write .",
    "types": "wrangler types --include-runtime false --strict-vars false",
    "tail": "wrangler tail",
    "image:build": "docker build --platform linux/amd64 -t marimo-container .",
    "image:run": "docker run --rm -p 8080:8080 marimo-container"
  },
  "devDependencies": {
    "@cloudflare/containers": "^0.0.30",
    "@cloudflare/workers-types": "^4.20251120.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.49.1"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "semi": false,
    "trailingComma": "none"
  }
}
